<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Base theme, all common styling here-->
    <style name="Base.HealthExpress" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.HealthExpress.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.HealthExpress.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.HealthExpress.LargeComponent</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.HealthExpress.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HealthExpress.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.HealthExpress.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.HealthExpress.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.HealthExpress.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.HealthExpress.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HealthExpress.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.HealthExpress.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HealthExpress.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HealthExpress.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.HealthExpress.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.HealthExpress.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.HealthExpress.Overline</item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>

        <!--Default styles-->
        <item name="bottomNavigationStyle">@style/Widget.HealthExpress.BottomNavigationView</item>

    </style>

    <style name="HealthExpress" parent="@style/Base.HealthExpress"/>

    <style name="HealthExpress.Yellow">
        <item name="colorPrimary">@color/HealthExpress_yellow_500</item>
        <item name="colorPrimaryVariant">@color/HealthExpress_yellow_400</item>
        <item name="colorSecondary">@color/HealthExpress_blue_700</item>
        <item name="colorSecondaryVariant">@color/HealthExpress_blue_800</item>
    </style>

    <style name="HealthExpress.Blue">
        <item name="colorPrimary">@color/HealthExpress_blue_700</item>
        <item name="colorPrimaryVariant">@color/HealthExpress_blue_800</item>
        <item name="colorSecondary">@color/HealthExpress_yellow_500</item>
        <item name="colorSecondaryVariant">@color/HealthExpress_yellow_400</item>
    </style>

    <style name="ThemeOverlay.HealthExpress.Blue" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/HealthExpress_blue_700</item>
        <item name="colorPrimaryVariant">@color/HealthExpress_blue_800</item>
        <item name="colorSecondary">@color/HealthExpress_yellow_500</item>
        <item name="colorSecondaryVariant">@color/HealthExpress_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="ThemeOverlay.HealthExpress.Blue.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/HealthExpress_blue_700</item>
        <item name="colorPrimaryVariant">@color/HealthExpress_blue_800</item>
        <item name="colorSecondary">@color/HealthExpress_yellow_500</item>
        <item name="colorSecondaryVariant">@color/HealthExpress_yellow_400</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="HealthExpress.Pink">
        <item name="colorPrimary">@color/HealthExpress_pink_500</item>
        <item name="colorSecondary">@color/HealthExpress_pink_500</item>
        <item name="colorPrimaryVariant">@color/HealthExpress_pink_600</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="ThemeOverlay.HealthExpress.TransitionShapeAppearance.Small" parent="">
        <item name="transitionShapeAppearance">@style/ShapeAppearance.HealthExpress.SmallComponent</item>
    </style>

</resources>
